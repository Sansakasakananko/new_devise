
<p style= "color: green"><%= notice %></p>
<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>投稿</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name%></td>
        <td><%= post.context %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '詳細を見る', post_path(post) %></td>
        <td><%= link_to '削除', post_path(post), data: {turbo_method: :delete, turbo_confirm: "本当に削除しますか？"} %></td>      
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規投稿', new_post_path %>
